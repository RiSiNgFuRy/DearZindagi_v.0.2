<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#33474646"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:clickable="true"

        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="80dp"
                android:layout_weight="9"
                android:src="@drawable/ic_alarm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shows_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_weight="1"
                        android:textColor="#252525"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/out_del_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/ic_delete"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <TableLayout
                    android:id="@+id/out_list_of_med"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#858585">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/out_name_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Name"
                            android:background="#66858585"
                            android:textAllCaps="true"
                            android:textColor="#4E4C4C"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/out_num0ftimes_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#66858585"
                            android:text="Num of Tablets"
                            android:textAllCaps="true"
                            android:textColor="#4E4C4C"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/out_expiry_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#66858585"
                            android:text="Expiry"
                            android:textAllCaps="true"
                            android:textColor="#4E4C4C"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/out_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:maxWidth="100dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="#D8D7D7"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/out_num0ftimes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#D8D7D7"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/out_expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#D8D7D7"
                            android:text="TextView" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>